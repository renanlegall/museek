<% if user_signed_in? %>
  <% if current_user.voted_for?(playlist) %>
    <%= link_to upvote_path(current_user.upvotes.where(playlist: playlist).first),remote: true, method: :delete, class: 'product-upvote product-upvoted' do %>
      <div class="product-arrow"></div>
      <div class='product-count'>
        <%= playlist.upvotes.size %>
      </div>
    <% end %>
  <% else %>
    <%= link_to upvotes_path(playlist_id: playlist.id), remote: true, method: :post, class: 'product-upvote' do %>
      <div class="product-arrow"></div>
      <div class='product-count'>
        <%= playlist.upvotes.size %>
      </div>
    <% end %>
  <% end %>

  <% else %>
  <div class='product-upvote'>
    <div class="product-arrow"></div>
    <div class='product-count'>
      <%= playlist.upvotes.size %>
    </div>
  </div>
<% end %>
