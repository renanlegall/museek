<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-lg-8 col-lg-offset-2">
      <div class="form">
      <div class="welcome-sentence text-center">
        <h2>Hello <%= @user.first_name %> </h2>
        <h4>You can now create your own playlist: </h4>
      </div>
          <%= simple_form_for @playlist do |f| %>
            <%= f.input :name, label: "What's the name of your playlist ?" %>
            <%= f.input :description, label: "Add a description:" %>
            <%= f.input :photo, as: :attachinary, label: "Upload a playlist picture:"%>
            <%= f.button :submit, class: 'btn btn-primary center-block' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
