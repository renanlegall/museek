<div class="container-playlist">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <h3>My playlists</h3>
      <% @user.playlists.each do |playlist| %>
      <div class="product">
        <div class='product-upvote'>
          <div class="product-arrow"></div>
          <div class='product-count'><%= playlist.name.size.to_i %> </div>
        </div>
        <% if playlist.photo? %>
        <%= cl_image_tag playlist.photo.path, width: 200, height: 100, crop: :fill, class: "product-image hidden-xs"%>
        <% end %>
        <div class='product-body'>
          <h3><%= playlist.name %></h3>
          <p><%= playlist.description %></p>
        </div>
        <ul class="list-inline product-controls hidden-sm hidden-xs">
          <li><a href=""><i class="fa fa-heart"></i></a></li>
          <li><a href=""><i class="fa fa-share"></i></a></li>
          <li><a href=""><i class="fa fa-star"></i></a></li>
        </ul>
        <%= link_to "+ Add tracks", playlist_path(playlist), class: "btn btn-primary", id: "playlist"+playlist.id.to_s %>
      </div>
      <% end %>
    </div>
  </div>
</div>

