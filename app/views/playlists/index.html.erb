<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <h3>My playlists</h3>
      <% @playlists.each do |playlist| %>
      <div class="product">
        <div class='product-upvote'>
          <div class="product-arrow"></div>
          <div class='product-count'>95</div>
        </div>
        <img src="http://cdn.99scenes.com/wp-content/uploads/2016/07/swedish-house-mafia.jpg" alt="kudoz" class="product-image hidden-xs">
        <div class='product-body'>
          <h3><%= playlist.name %></h3>
          <p><%= playlist.description %></p>
        </div>
        <ul class="list-inline product-controls hidden-sm hidden-xs">
          <li><a href=""><i class="fa fa-heart"></i></a></li>
          <li><a href=""><i class="fa fa-share"></i></a></li>
          <li><a href=""><i class="fa fa-star"></i></a></li>
        </ul>
      </div>
      <% end %>
    </div>
  </div>
</div>

