<div class="wrapper">
    <div class="playlist">
      <div class="col-xs-10 col-xs-offset-1">
      <p><%= @user.first_name %>, You can now create your playlist via Soundcloud: </p>
         <%= simple_form_for ([ @playlist, @track ]) do |f| %>
            <%= f.input :soundcloud_url, label: "What's the url of your track ?" %>
            <%= f.button :submit, class: 'btn btn-primary center-block' %>
          <% end %>
      </div>



  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <% @playlist.tracks.each do |track| %>
        <!-- <h2>Temperature
          <small>Sean Paul </small>
        </h2> -->
        <div class="product">
          <iframe width="100%" height="140" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=<%= track.soundcloud_url %>&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false&amp;visual=true"></iframe>
        </div>
      <% end %>
    </div>
  </div>
</div>
  </div>

    <div class="messages-container">
      <div class="col-xs-12">

        <div class="product">

          <div class="upvote-container" id="playlist-<%= @playlist.id %>">
              <%= render 'upvotes/show', playlist: @playlist %>
            </div>

        <% if @playlist.photo? %>
        <%= cl_image_tag @playlist.photo.path, width: 200, height: 100, crop: :fill, class: "product-image hidden-xs"%>
        <% end %>
          <div class='product-body'>
            <h3><%= @playlist.name %></h3>
            <p><%= @playlist.description %></p>
          </div>
          <ul class="list-inline product-controls hidden-sm hidden-xs">
            <li>
              <%= link_to edit_playlist_path(@playlist), method: :get do %>
              <i class= "fa fa-pencil"></i>
              <% end %>
            </li>
            <li>
              <%= link_to playlist_path(@playlist), method: :delete, data: { confirm: "ðŸŽµ Are you sure ? ðŸŽµ"} do %>
                  <i class="fa fa-trash"></i>
                <% end %>
              </li>
          </ul>
        </div>

        <p><%= @user.first_name %>, share with your friends: </p>
      </div>
      <div class="new-message-container">
        <input type="text" class="new-message-field" placeholder="Start chatting here ...">
        <input type="submit" value="Send" class="btn btn-primary btn-primary"">
      </div>
    </div>
</div>
