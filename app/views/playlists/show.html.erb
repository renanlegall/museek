<div class="wrapper">
    <div class="playlist">
      <div class="col-xs-10 col-xs-offset-1">
      <p><%= @user.first_name %>, You can now create your playlist: </p>

        <form action="#" class="form-inline">
                <input type="text" class="form-control input-md" placeholder="Search for your track">
                <input type="submit" value="+" class="btn btn-primary btn-primary">
        </form>
      </div>
  </div>

    <div class="messages-container">
      <div class="col-xs-12">

        <div class="product">

          <div class="upvote-container" id="playlist-<%= @playlist.id %>">
              <%= render 'upvotes/show', playlist: @playlist %>
            </div>

        <% if @playlist.photo? %>
        <%= cl_image_tag @playlist.photo.path, width: 200, height: 100, crop: :fill, class: "product-image hidden-xs"%>
        <% end %>
          <div class='product-body'>
            <h3><%= @playlist.name %></h3>
            <p><%= @playlist.description %></p>
          </div>
          <ul class="list-inline product-controls hidden-sm hidden-xs">
            <li>
              <%= link_to edit_playlist_path(@playlist), method: :get do %>
              <i class= "fa fa-pencil"></i>
              <% end %>
            </li>
            <li>
              <%= link_to playlist_path(@playlist), method: :delete, data: { confirm: 'Are you sure?'} do %>
                  <i class="fa fa-trash"></i>
                <% end %>
              </li>
          </ul>
        </div>

        <p><%= @user.first_name %>, share with your friends: </p>
      </div>
      <div class="new-message-container">
        <input type="text" class="new-message-field" placeholder="Start chatting here ...">
        <input type="submit" value="Send" class="btn btn-primary btn-primary"">
      </div>
    </div>
</div>
