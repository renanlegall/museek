<div class="profile-container">
  <div class="row">
  <div class="container text-center">
      <div class="grid">
        <div class="card-profile element1">
          <div class="card-content">
            <div class="form">
            <div class="title">
              <div class="title-image">
                <%= image_tag "edit.png" %>
              </div>
              <div class="title-tag">
                <h3>Edit my profile</h3>
              </div>
            </div>

              <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <%= f.error_notification %>

                <div class="form-inputs">
                  <%= f.input :email, required: true, autofocus: true %>

                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                    <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
                  <% end %>
                  <%= f.input :photo, as: :attachinary, label: "Upload your profile photo:"%>

                  <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
                  <%= f.input :password_confirmation, required: false %>
                  <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
                </div>

                <div class="form-actions">
                  <%= f.button :submit, "Update", class: "btn btn-primary center-block" %>
                </div>
              <% end %>

              <p><%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

              <%= link_to "Back", :back %>

            </div>
          </div>
        </div>
        <div class="card-profile element2">
          <div class="card-content">
            <h3><%= @user.playlists.size.to_i%></h3>
            <p>playlists</p>
          </div>
        </div>
        <div class="card-profile element3">
          <div class="card-content">
            <h3><%= @user.tracks.size.to_i %></h3>
            <p>tracks</p>
          </div>
        </div>
        <div class="card-profile element4">
          <div class="card-content">
            <h3><%= @user.upvotes.size.to_i%></h3>
            <p>upvotes</p>
          </div>
        </div>
        <div class="card-profile element5">
          <div class="card-content">
            <div class="card-info">
              <div class=card-pic>
                <% if @user.photo? %>
                  <%= cl_image_tag @user.photo.path, class: "card-avatar"%>
                <% else %>
                  <%= image_tag @user.facebook_picture_url || "presley.jpg", class: "card-avatar" %>
                <% end %>
              </div>
              <div class=card-badge>
                <h2><%= @user.first_name %> <%= @user.last_name %></h2>
                  <% if @user.playlists.size.to_i > 0 && @user.tracks.size.to_i > 0 && @user.upvotes.size.to_i > 0 %>
                    <%= image_tag "radio.png", class: "card-icon" %>
                    <p><b> Tracklist lover </b></p>
                  <% elsif @user.playlists.size.to_i > 3 && @user.tracks.size.to_i > 10 && @user.upvotes.size.to_i > 3 %>
                    <%= image_tag "cassette.png", class: "card-icon" %>
                    <p><b> Museek ambassador </b></p>
                  <% elsif @user.playlists.size.to_i > 5 && @user.tracks.size.to_i > 50 && @user.upvotes.size.to_i > 10 %>
                    <%= image_tag "platine.png", class: "card-icon" %>
                    <p><b> DJ of the Year </b></p>
                  <% end %>
              </div>
            </div>
            <% @user.playlists.first(3).each do |playlist| %>
              <div class="profile-product">
        <% if playlist.photo? %>
        <%= cl_image_tag playlist.photo.path, width: 200, height: 100, crop: :fill, class: "product-image hidden-xs"%>
        <% end %>
          <div class='product-body'>
            <h3><%= playlist.name %></h3>
            <p><%= playlist.description %></p>
          </div>
        </div>
            <% end%>
            <%= link_to "See all my playlists", playlists_path, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>



    </div>
